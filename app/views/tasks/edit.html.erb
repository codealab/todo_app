<h1>Edit Task</h1>

<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :complete %><br>
    <%= f.check_box :complete %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
